<%= render 'shared/errors', obj: @user %>

<%= form_with(model: @user, local: true) do |f| %>
	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
			<%= f.label :username %>
		</div>
		<div class="col-sm-8">
			<%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true%>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
			<%= f.label :email %>
		</div>
		<div class="col-sm-8">
			<%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>
		</div>
	</div>

	<div class="form-group row">
		<div class="col-sm-2 col-form-label">
			<%= f.label :password %>
		</div>
		<div class="col-sm-8">
			<%= f.password_field :password, class: "form-control", placeholder: "Enter password"%>
		</div>
	</div>

	<div class="form-group row">
		<div class="offset-sm-2 col-sm-8">
			<%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary form-control")%>
		</div>
	</div>

<% end %>

<div class="offset-sm-2 col-sm-8">
	<%= link_to 'Cancel and return to article listing', articles_path, class: "btn btn-secondary btn-block"%> 
</div>
