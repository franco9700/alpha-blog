<h1 align="center" class="page-title">Listing all categories</h1>

<hr>

<% if logged_in? && current_user.admin?%>
	<div class="row col-sm-8 offset-sm-2">
		<%= link_to 'New category', new_category_path, class: "btn btn-primary btn-block"%>
	</div>
<% end %>

<br>

<div class="col-sm-2 offset-md-5">
	<%= will_paginate %>
</div>

<div align="center">
	<% @categories.each do |category| %>
		<ul class="listing">
			<div class="row">
				<div class="card col-md-4 offset-md-4">
					<div class="card-body">
						<li class="article-title card-title">
							<%= link_to "#{category.name}", category_path(category) %>
						</li>
						<li class="card-text">
							<small><%= pluralize(category.articles.count, "article")%></small>
						</li>
					</div>
				</div>
			</div>
		</ul>
	<% end %>
</div>

<div class="col-sm-2 offset-md-5">
	<%= will_paginate %>
</div>